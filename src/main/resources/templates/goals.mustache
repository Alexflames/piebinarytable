<!DOCTYPE html>
<html xmlns:=http://www.w3.org/1999/xhtml">
<head>
    {{> meta}}
    <title>BiT | {{#i18n}}goal.goals{{/i18n}}</title>
</head>
<body class="bg-dark">
{{> scripts}}
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/">BiT</a>
    <div class="navbar-nav mr-auto">
        <span class="nav-item nav-link active">{{#user}}{{#i18n}}goal.greeting{{/i18n}},&nbsp;{{name}}!{{/user}}</span>
        <span class="nav-item nav-link active">{{#i18n}}goal.countOfGoals{{/i18n}}{{countOfGoals}}</span>
        <a class="nav-item btn btn-outline-primary ml-3" href="/addgoal">{{#i18n}}goal.addGoal{{/i18n}}</a>
        <form class="bg-dark" action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
            <input class="nav-item nav-link active bg-dark border-0 ml-5" type="submit" value="{{#i18n}}meta.logout{{/i18n}}"/>
        </form>
    </div>
</nav>
<div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Goal</th>
                <th scope="col">Steps</th>
                <th scope="col">Note</th>
            </tr>
        </thead>
        <tbody>
        {{#goals}}
        <tr>
            <td><a href="goal?id={{id}}">{{goalName}}</a></td>
            <td>{{doneSteps}}/{{allSteps}}</td>
            <td>{{note}}</td>
        </tr>
        {{/goals}}
        {{^goals}}
        <tr>
            <td>{{#i18n}}goal.noGoalsYet{{/i18n}}</td>
            <td></td>
            <td></td>
        </tr>
        {{/goals}}
        </tbody>
    </table>

    <!--
    {{#goals}}
        <div>
            <a href="goal?id={{id}}">{{goalName}}&nbsp;{{doneSteps}}/{{allSteps}}&nbsp;{{note}}</a>
        </div>
    {{/goals}} -->
</div>
</body>
</html>